<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="12dp">

    <!-- Fila 1: ID y Nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/txtIdDonadorItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID-001"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/txtNombreDonador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del Donador"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Fila 2: Teléfono y Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/txtTelefonoItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tel: 000-0000"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/txtEmailItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="email@ejemplo.com"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Fila 3: Categoría y Corporación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCategoriaItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categoría"
            android:textSize="12sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtCorporacionItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Corporación"
            android:textSize="12sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>