<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#E0E0E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado -->
    <TextView
        android:text="Menu Principal"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Gestión Principal -->
    <Button
        android:id="@+id/botonGestion"
        android:text="Gestión Principal"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Eventos -->
    <Button
        android:id="@+id/botonEventos"
        android:text="Eventos y actividades"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Donativos y Pagos -->
    <Button
        android:id="@+id/botonGestionPagos"
        android:text="Donativos y Pagos"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Configuración -->
    <Button
        android:id="@+id/botonConfig"
        android:text="Configuración y reportes"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Cerrar sesión -->
    <Button
        android:id="@+id/botonCerrarSesion"
        android:text="Cerrar sesión"
        android:background="#FF9800"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
